<div class="container">
  <div class="columns">
    <div class="column">
      <h1 class="title"><%= t('.title') %></h1>
      <% if @model %>
        <ul class="list-unstyled">
          <% @model.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <%= debug @model.to_xml(pretty: true) %>
      <% end %>
    </div>
  </div>
</div>
